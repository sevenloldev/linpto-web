---
// Assets
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Icons
import Plus from "@/components/fundations/icons/Plus.astro";
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="py-12 py-48">
      <Text
        tag="h1"
        variant="displayMD"
        class="text-accent-800 font-display text-balance"
      >
        All buttons variants
      </Text>
      <div class="grid grid-cols-1 lg:grid-cols-3 mt-12 lg:mt-24 gap-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div>
            <Text
              tag="p"
              variant="textXS"
              class="font-medium uppercase text-accent-800"
            >
              Default text
            </Text>
            <div class="flex flex-col mt-2 gap-4">
              <Button href="#_" size="xs" variant="default">Default XS</Button>
              <Button href="#_" size="sm" variant="default">Default SM</Button>
              <Button href="#_" size="base" variant="default"
                >Default Base</Button
              >
              <Button href="#_" size="md" variant="default">Default MD</Button>
              <Button href="#_" size="lg" variant="default">Default LG</Button>
              <Button href="#_" size="xl" variant="default">Default XL</Button>
            </div>
          </div>
          <div>
            <Text
              tag="p"
              variant="textXS"
              class="font-medium uppercase text-accent-800"
            >
              Icon
            </Text>
            <div class="flex flex-col mt-2 gap-4">
              <Button href="#_" size="xs" variant="default" iconOnly
                ><Plus slot="icon" size="sm" /></Button
              >
              <Button href="#_" size="sm" variant="default" iconOnly
                ><Plus slot="icon" size="base" /></Button
              >
              <Button href="#_" size="base" variant="default" iconOnly
                ><Plus slot="icon" size="base" /></Button
              >
              <Button href="#_" size="md" variant="default" iconOnly
                ><Plus slot="icon" size="lg" /></Button
              >
              <Button href="#_" size="lg" variant="default" iconOnly
                ><Plus slot="icon" size="xl" /></Button
              >
              <Button href="#_" size="xl" variant="default" iconOnly
                ><Plus slot="icon" size="xl" /></Button
              >
            </div>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div>
            <Text
              tag="p"
              variant="textXS"
              class="font-medium uppercase text-accent-800"
            >
              Accent text
            </Text>
            <div class="flex flex-col mt-2 gap-4">
              <Button href="#_" size="xs" variant="accent">Accent XS</Button>
              <Button href="#_" size="sm" variant="accent">Accent SM</Button>
              <Button href="#_" size="base" variant="accent">Accent Base</Button
              >
              <Button href="#_" size="md" variant="accent">Accent MD</Button>
              <Button href="#_" size="lg" variant="accent">Accent LG</Button>
              <Button href="#_" size="xl" variant="accent">Accent XL</Button>
            </div>
          </div>
          <div>
            <Text
              tag="p"
              variant="textXS"
              class="font-medium uppercase text-accent-800"
            >
              Icon
            </Text>
            <div class="flex flex-col mt-2 gap-4">
              <Button href="#_" size="xs" variant="accent" iconOnly
                ><Plus slot="icon" size="sm" /></Button
              >
              <Button href="#_" size="sm" variant="accent" iconOnly
                ><Plus slot="icon" size="base" /></Button
              >
              <Button href="#_" size="base" variant="accent" iconOnly
                ><Plus slot="icon" size="base" /></Button
              >
              <Button href="#_" size="md" variant="accent" iconOnly
                ><Plus slot="icon" size="lg" /></Button
              >
              <Button href="#_" size="lg" variant="accent" iconOnly
                ><Plus slot="icon" size="xl" /></Button
              >
              <Button href="#_" size="xl" variant="accent" iconOnly
                ><Plus slot="icon" size="xl" /></Button
              >
            </div>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div>
            <Text
              tag="p"
              variant="textXS"
              class="font-medium uppercase text-accent-800"
            >
              Muted text
            </Text>
            <div class="flex flex-col mt-2 gap-4">
              <Button href="#_" size="xs" variant="muted">Muted XS</Button>
              <Button href="#_" size="sm" variant="muted">Muted SM</Button>
              <Button href="#_" size="base" variant="muted">Muted Base</Button>
              <Button href="#_" size="md" variant="muted">Muted MD</Button>
              <Button href="#_" size="lg" variant="muted">Muted LG</Button>
              <Button href="#_" size="xl" variant="muted">Muted XL</Button>
            </div>
          </div>
          <div>
            <Text
              tag="p"
              variant="textXS"
              class="font-medium uppercase text-accent-800"
            >
              Icon
            </Text>
            <div class="flex flex-col mt-2 gap-4">
              <Button href="#_" size="xs" variant="muted" iconOnly
                ><Plus slot="icon" size="sm" /></Button
              >
              <Button href="#_" size="sm" variant="muted" iconOnly
                ><Plus slot="icon" size="base" /></Button
              >
              <Button href="#_" size="base" variant="muted" iconOnly
                ><Plus slot="icon" size="base" /></Button
              >
              <Button href="#_" size="md" variant="muted" iconOnly
                ><Plus slot="icon" size="lg" /></Button
              >
              <Button href="#_" size="lg" variant="muted" iconOnly
                ><Plus slot="icon" size="xl" /></Button
              >
              <Button href="#_" size="xl" variant="muted" iconOnly
                ><Plus slot="icon" size="xl" /></Button
              >
            </div>
          </div>
        </div>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
