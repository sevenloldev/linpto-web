---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
const contactInfo = [
  {
    label: "電話",
    value: "02-2585-2626",
    href: "tel:+886225852626",
  },
  {
    label: "信箱",
    value: "service@linpto.com.tw",
    href: "mailto:service@linpto.com.tw",
  },
  {
    label: "地址",
    value: "台北市中正區重慶南路一段99號11樓之9",
    href: "#",
  },
];
const officeLocations = [
  {
    name: "台北總所",
    address: "台北市中正區重慶南路一段99號",
    city: "11樓之9",
    phone: "02-2585-2626",
    email: "service@linpto.com.tw",
  },
];
const businessHours = [
  { day: "週一至週五", hours: "09:00 - 18:00" },
  { day: "週六", hours: "預約制" },
  { day: "週日", hours: "休息" },
];
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="pb-12 pt-48">
      <div class="overflow-hidden grid grid-cols-1 lg:grid-cols-2">
        <div class="p-8 h-full flex flex-col justify-start bg-base-50">
          <div>
            <Text
              tag="h1"
              variant="displayMD"
              class="text-accent-800 font-display text-balance lg:col-span-2"
            >
              聯絡我們
            </Text>
            <div class="space-y-1 mt-8">
              {
                contactInfo.map((info) => (
                  <div class="flex items-start space-x-3">
                    <Text
                      tag="p"
                      variant="textSM"
                      class="font-medium text-accent-800"
                    >
                      {info.label}
                    </Text>
                    {info.href !== "#" ? (
                      <a
                        href={info.href}
                        class="text-secondary-600 hover:text-accent-800 transition-colors"
                      >
                        <Text tag="p" variant="textSM">
                          {info.value}
                        </Text>
                      </a>
                    ) : (
                      <Text tag="p" variant="textSM" class="text-base-600">
                        {info.value}
                      </Text>
                    )}
                  </div>
                ))
              }
            </div>
          </div>
          <div class="mt-8 pt-8 border-t border-base-200">
            <Text
              tag="h3"
              variant="textXL"
              class="font-display text-accent-800 mb-3"
            >
              營業時間
            </Text>
            <div class="space-y-2 mt-8">
              {
                businessHours.map((schedule) => (
                  <div class="flex justify-between text-sm">
                    <span class="text-accent-800">{schedule.day}</span>
                    <span class="text-base-600">{schedule.hours}</span>
                  </div>
                ))
              }
            </div>
          </div>
        </div>
        <form class="space-y-4 p-8 bg-accent-900">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div class="space-y-1">
              <label
                for="firstName"
                class="block text-xs font-medium text-base-300"
              >
                姓 *
              </label>
              <input
                type="text"
                id="firstName"
                name="firstName"
                required
                class="w-full px-3 py-2 border-b border-transparent h-12 bg-white/5 focus:outline-none focus:bg-white/8 text-white text-xs focus:ring-0"
              />
            </div>
            <div class="space-y-1">
              <label
                for="lastName"
                class="block text-xs font-medium text-base-300"
              >
                名 *
              </label>
              <input
                type="text"
                id="lastName"
                name="lastName"
                required
                class="w-full px-3 py-2 border-b border-transparent h-12 bg-white/5 focus:outline-none focus:bg-white/8 text-white text-xs focus:ring-0"
              />
            </div>
          </div>
          <div class="space-y-1">
            <label for="email" class="block text-xs font-medium text-base-300">
              電子郵件 *
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-3 py-2 border-b border-transparent h-12 bg-white/5 focus:outline-none focus:bg-white/8 text-white text-xs focus:ring-0"
            />
          </div>
          <div class="space-y-1">
            <label for="phone" class="block text-xs font-medium text-base-300">
              電話號碼
            </label>
            <input
              type="tel"
              id="phone"
              name="phone"
              class="w-full px-3 py-2 border-b border-transparent h-12 bg-white/5 focus:outline-none focus:bg-white/8 text-white text-xs focus:ring-0"
            />
          </div>
          <div class="space-y-1">
            <label
              for="practiceArea"
              class="block text-xs font-medium text-base-300"
            >
              諮詢領域
            </label>
            <select
              id="practiceArea"
              name="practiceArea"
              class="w-full px-3 py-2 border-b border-transparent h-12 bg-white/5 focus:outline-none focus:bg-white/8 text-white text-xs focus:ring-0"
            >
              <option value="">請選擇諮詢領域</option>
              <option value="litigation">民事訴訟</option>
              <option value="criminal">刑事辯護</option>
              <option value="corporate">企業法務</option>
              <option value="ip">智慧財產權</option>
              <option value="realestate">不動產法律</option>
              <option value="family">家事法律</option>
              <option value="other">其他</option>
            </select>
          </div>
          <div class="space-y-1">
            <label
              for="message"
              class="block text-xs font-medium text-base-300"
            >
              您的訊息 *
            </label>
            <textarea
              id="message"
              name="message"
              rows="5"
              required
              placeholder="請簡述您的法律問題…"
              class="w-full px-3 py-2 border-b border-transparent bg-white/5 focus:outline-none focus:bg-white/8 text-white text-xs focus:ring-0"
            ></textarea>
          </div>

          <Button variant="muted" size="sm" type="submit" class="w-full">
            送出訊息
          </Button>
        </form>
      </div>
    </Wrapper>
    <Wrapper variant="standard" class="py-12">
      <div>
        <Text
          tag="h2"
          variant="displayMD"
          class="text-accent-800 font-display text-balance"
        >
          據點資訊
        </Text>
        <div class="grid grid-cols-1 mt-12 gap-8">
          {
            officeLocations.map((office) => (
              <div class="bg-base-50 gap-8">
                <div class="p-8">
                  <Text
                    tag="h3"
                    variant="displaySM"
                    class="text-accent-800 font-display"
                  >
                    {office.name}
                  </Text>
                  <div class="space-y-1 text-sm text-base-700 mt-8">
                    <Text tag="p" variant="textXS">
                      {office.address}
                    </Text>
                    <Text tag="p" variant="textXS">
                      {office.city}
                    </Text>
                    <a
                      href={`tel:${office.phone}`}
                      class="text-secondary-500 hover:text-accent-80 transition-colors text-xs block"
                    >
                      {office.phone}
                    </a>
                    <a
                      href={`mailto:${office.email}`}
                      class="text-secondary-500 hover:text-accent-800 transition-colors text-xs block"
                    >
                      {office.email}
                    </a>
                  </div>
                </div>
                <div class="aspect-video overflow-hidden">
                  <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3614.7!2d121.5115!3d25.0445!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3442a9099a5e4e3f%3A0x!2z5Y-w5YyX5biC5Lit5q2j5Y2A6YeN5oW25Y2X6Lev5LiA5q61OTnomZ8!5e0!3m2!1szh-TW!2stw!4v1696871234567!5m2!1szh-TW!2stw"
                    width="100%"
                    height="100%"
                    style="border:0;"
                    allowfullscreen=""
                    loading="eager"
                    referrerpolicy="no-referrer-when-downgrade"
                    title="台北總所地圖"
                  />
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
