---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Icons
import Updates from "@/components/fundations/icons/Updates.astro";
import Insights from "@/components/fundations/icons/Insights.astro";
import Clients from "@/components/fundations/icons/Clients.astro";
import Industry from "@/components/fundations/icons/Industry.astro";
const newsletterBenefits = [
  {
    title: "Legal Updates",
    description:
      "Stay informed about changes in laws and regulations that may affect your business or personal matters.",
    icon: Updates,
  },
  {
    title: "Practice Insights",
    description:
      "Get expert analysis and insights into various practice areas including corporate law, litigation, and more.",
    icon: Insights,
  },
  {
    title: "Client Success Stories",
    description:
      "Read about real cases and how our legal strategies helped clients achieve their goals.",
    icon: Clients,
  },
  {
    title: "Industry Trends",
    description:
      "Learn about emerging trends in the legal industry and how they impact businesses and individuals.",
    icon: Industry,
  },
];
const newsletterTopics = [
  "Recent Supreme Court Decisions",
  "Corporate Law Developments",
  "Employment Law Updates",
  "Real Estate Market Insights",
  "Tax Law Changes",
  "Intellectual Property News",
  "Family Law Trends",
  "Business Litigation Updates",
];
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="pb-12 pt-48">
      <div class="overflow-hidden grid grid-cols-1 lg:grid-cols-2">
        <div class="p-8 h-full flex flex-col justify-start bg-base-50">
          <Text
            tag="h1"
            variant="displayMD"
            class="text-accent-800 font-display text-balance lg:col-span-2"
          >
            Stay Informed with Our 電子報
          </Text>
          <Text
            tag="p"
            variant="textSM"
            class="text-base-600 max-w-3xl mx-auto leading-relaxed mt-2"
          >
            訂閱 to 翰霖法律事務所's newsletter and receive expert legal
            insights, industry updates, and valuable information delivered
            directly to your inbox. Join thousands of professionals who stay
            ahead of legal developments.
          </Text>
          <Text
            tag="h2"
            variant="textXL"
            class="text-accent-800 font-display text-balance mt-8"
          >
            Featured Topics
          </Text>
          <div class="space-y-1 mt-2">
            {
              newsletterTopics.map((topic) => (
                <Text tag="p" variant="textXS" class="text-base-600">
                  {topic}
                </Text>
              ))
            }
          </div>
        </div>
        <div class="mx-auto">
          <form class="space-y-4 p-8 bg-accent-900 h-full">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div class="space-y-1">
                <label
                  for="firstName"
                  class="block text-xs font-medium text-base-300"
                >
                  First Name *
                </label>
                <input
                  type="text"
                  id="firstName"
                  name="firstName"
                  required
                  class="w-full px-3 py-2 border-b border-transparent h-12 bg-white/5 focus:outline-none focus:bg-white/8 text-white text-xs focus:ring-0"
                  placeholder="John"
                />
              </div>
              <div class="space-y-1">
                <label
                  for="lastName"
                  class="block text-xs font-medium text-base-300"
                >
                  Last Name *
                </label>
                <input
                  type="text"
                  id="lastName"
                  name="lastName"
                  required
                  class="w-full px-3 py-2 border-b border-transparent h-12 bg-white/5 focus:outline-none focus:bg-white/8 text-white text-xs focus:ring-0"
                  placeholder="Doe"
                />
              </div>
            </div>
            <div>
              <label
                for="email"
                class="block text-xs font-medium text-base-300"
              >
                Email Address *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-3 py-2 border-b border-transparent h-12 bg-white/5 focus:outline-none focus:bg-white/8 text-white text-xs focus:ring-0"
                placeholder="john.doe@example.com"
              />
            </div>
            <div>
              <label
                for="practiceArea"
                class="block text-xs font-medium text-base-300"
              >
                Areas of Interest (Optional)
              </label>
              <select
                id="practiceArea"
                name="practiceArea"
                class="w-full px-3 py-2 border-b border-transparent h-12 bg-white/5 focus:outline-none focus:bg-white/8 text-white text-xs focus:ring-0"
              >
                <option value="">Select areas of interest</option>
                <option value="corporate">Corporate Law</option>
                <option value="criminal">Criminal Defense</option>
                <option value="family">Family Law</option>
                <option value="personal-injury">Personal Injury</option>
                <option value="real-estate">Real Estate</option>
                <option value="employment">Employment Law</option>
                <option value="intellectual-property"
                  >Intellectual Property</option
                >
                <option value="all">All 專業領域</option>
              </select>
            </div>
            <div class="flex items-start space-x-3">
              <input
                type="checkbox"
                id="privacy"
                name="privacy"
                required
                class="mt-1 size-4 text-accent-600 focus:ring-accent-500 ring-offset-accent-900 border-white/10 rounded bg-accent-800"
              />
              <label for="privacy" class="text-xs text-base-400">
                I agree to receive newsletters from 翰霖法律事務所. I understand
                I can unsubscribe at any time. 查看我們的 <a
                  href="/privacy"
                  class="text-secondary-400 hover:text-accent-700 underline"
                  >Privacy Policy</a
                >.
              </label>
            </div>
            <Button variant="muted" size="sm" type="submit" class="w-full">
              訂閱 to 電子報
            </Button>
          </form>
        </div>
      </div>
    </Wrapper>
    <Wrapper class="py-12 lg:py-24">
      <Text
        tag="h2"
        variant="displayMD"
        class="text-accent-800 font-display text-balance"
        >What you'll receive
      </Text>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mt-8">
        {
          newsletterBenefits.map((benefit) => (
            <div class="bg-base-50  p-8 flex flex-col">
              {benefit.icon && (
                <benefit.icon class="size-8 text-secondary-400 " />
              )}
              <Text
                tag="h3"
                variant="displayXS"
                class="text-accent-800 font-display mt-12"
              >
                {benefit.title}
              </Text>
              <Text
                tag="p"
                variant="textSM"
                class="text-base-600 font-medium mt-2"
              >
                {benefit.description}
              </Text>
            </div>
          ))
        }
      </div>
    </Wrapper>
    <Wrapper class="py-12 lg:py-24">
      <div class="grid grid-cols-1 lg:grid-cols-4 items-start gap-y-8">
        <Text
          tag="p"
          variant="textXS"
          class="text-secondary-500 tracking-wide uppercase"
        >
          join us
        </Text>
        <div class="lg:col-span-3">
          <Text
            tag="h2"
            variant="displayLG"
            class="text-accent-800 font-display text-balance"
          >
            Join Our Community
          </Text>
          <Text tag="p" variant="textLG" class="text-base-600 mt-4">
            Over 5,000 professionals trust 翰霖法律事務所 for their legal
            insights and updates. Join our growing community of informed clients
            and industry leaders.
          </Text>
        </div>
      </div>
      <ul
        class="grid grid-cols-2 sm:grid-cols-3 gap-y-8 mt-12 lg:mt-24 lg:divide-x lg:divide-base-200 lg:border-x lg:border-base-200"
      >
        {
          [
            {
              label: "Active 訂閱rs",
              value: "5,000+",
            },
            {
              label: "電子報 Delivery",
              value: "Monthly",
            },
            {
              label: "Years of Insights",
              value: "10+",
            },
          ].map((stat) => (
            <li class="flex flex-col gap-1 lg:gap-48 lg:px-4">
              <Text
                tag="p"
                variant="textBase"
                class="text-base-700 font-medium uppercase"
              >
                {stat.label}
              </Text>
              <Text
                tag="p"
                variant="displayLG"
                class="text-accent-800 font-display italic font-medium"
              >
                {stat.value}
              </Text>
            </li>
          ))
        }
      </ul>
    </Wrapper>
  </section>
</BaseLayout>
