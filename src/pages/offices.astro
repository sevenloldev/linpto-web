---
// Assets
import { Image } from "astro:assets";
import officeny from "@/images/assets/officeny.png";
import officela from "@/images/assets/officela.png";
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
const offices = [
  {
    office: officeny,
    name: "Main Office - New York",
    address: "123 Legal Avenue, Suite 400",
    city: "New York, NY 10001",
    phone: "(555) 123-4567",
    email: "ny@carringtonlaw.com",
    description:
      "Our flagship office in the heart of Manhattan serves clients throughout the Northeast with comprehensive legal services. Located in a modern high-rise with state-of-the-art conference facilities.",
    features: [
      "24/7 Security",
      "Conference Rooms",
      "Client Lounge",
      "Parking Garage",
    ],
    mapEmbed:
      "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3024.221990489111!2d-74.00369368459375!3d40.713129579331854!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c25a316ba4bf83%3A0xbae5cb597764b!2s123%20Legal%20Avenue%2C%20New%20York%2C%20NY%2010001!5e0!3m2!1sen!2sus!4v1696871234567!5m2!1sen!2sus",
  },
  {
    office: officela,
    name: "Branch Office - Los Angeles",
    address: "456 Justice Boulevard, Floor 12",
    city: "Los Angeles, CA 90210",
    phone: "(555) 987-6543",
    email: "la@carringtonlaw.com",
    description:
      "Serving clients across the West Coast from our Beverly Hills location. Our California office specializes in entertainment law, real estate, and business litigation.",
    features: ["Ocean Views", "Video Conferencing", "Library", "Valet Parking"],
    mapEmbed:
      "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3305.7326472360283!2d-118.40060368459375!3d34.069650679331854!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x80c2c75ddc3a5c71%3A0xbae5cb597764b!2s456%20Justice%20Boulevard%2C%20Los%20Angeles%2C%20CA%2090210!5e0!3m2!1sen!2sus!4v1696871234567!5m2!1sen!2sus",
  },
];
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="pb-12 pt-48">
      <div class="max-w-xl">
        <Text
          tag="h1"
          variant="displayLG"
          class="text-accent-800 font-display text-balance"
        >
          Our 據點資訊
        </Text>
        <Text
          tag="p"
          variant="textSM"
          class="text-base-600 leading-relaxed border-accent-500 mt-2"
        >
          With offices strategically located in major metropolitan areas,
          翰霖法律事務所 provides accessible, high-quality legal services to
          clients nationwide. Each office is equipped with modern facilities and
          staffed by experienced attorneys ready to serve your legal needs.
        </Text>
      </div>
      <div class="grid grid-cols-1 mt-12 gap-8">
        {
          offices.map((office) => (
            <div class="bg-base-50 gap-8">
              <div class="grid grid-cols-1 lg:grid-cols-2">
                <div class="p-8 flex flex-col justify-between">
                  <div>
                    <Text
                      tag="h3"
                      variant="displaySM"
                      class="text-accent-800 font-display"
                    >
                      {office.name}
                    </Text>
                    <Text
                      tag="p"
                      variant="textSM"
                      class="text-base-600  leading-relaxed"
                    >
                      {office.description}
                    </Text>
                    <div class="space-y-8 mt-12">
                      <div>
                        <Text
                          tag="h3"
                          variant="textSM"
                          class="font-medium text-accent-800"
                        >
                          Contact Information
                        </Text>
                        <div class="space-y-1 text-sm text-base-700 mt-4">
                          <Text tag="p" variant="textXS">
                            {office.address}
                          </Text>
                          <Text tag="p" variant="textXS">
                            {office.city}
                          </Text>
                          <a
                            href={`tel:${office.phone}`}
                            class="text-secondary-500 hover:text-accent-80 transition-colors text-xs block"
                          >
                            {office.phone}
                          </a>
                          <a
                            href={`mailto:${office.email}`}
                            class="text-secondary-500 hover:text-accent-80 transition-colors text-xs block"
                          >
                            {office.email}
                          </a>
                        </div>
                      </div>
                      <div>
                        <Text
                          tag="h3"
                          variant="textSM"
                          class="font-medium text-accent-800"
                        >
                          Office Features
                        </Text>
                        <ul class="space-y-1 text-sm text-base-700 mt-4 ">
                          {office.features.map((feature) => (
                            <li>
                              <Text tag="p" variant="textXS" class="">
                                {feature}
                              </Text>
                            </li>
                          ))}
                        </ul>
                      </div>
                    </div>
                  </div>
                  <Button
                    isLink={true}
                    href={`https://www.google.com/maps/dir/?api=1&destination=${encodeURIComponent(office.address + ", " + office.city)}`}
                    variant="default"
                    size="xs"
                    class="w-fit mt-12"
                  >
                    Get Directions
                  </Button>
                </div>
                <div>
                  <Image
                    src={office.office}
                    alt={office.name}
                    width={800}
                    height={800}
                    loading="eager"
                    decoding="async"
                    class="object-cover w-full  "
                  />
                  <div class="aspect-video  overflow-hidden max-h-60 w-full">
                    <iframe
                      src={office.mapEmbed}
                      width="100%"
                      height="100%"
                      style="border:0;"
                      allowfullscreen=""
                      loading="eager"
                      referrerpolicy="no-referrer-when-downgrade"
                      title={`Map of ${office.name}`}
                    />
                  </div>
                </div>
              </div>
            </div>
          ))
        }
      </div>
      <div class="bg-base-50 p-8 lg:p-12 mt-8">
        <div
          class="flex flex-col lg:flex-row items-start lg:items-center justify-between gap-6"
        >
          <div>
            <Text
              tag="h3"
              variant="displaySM"
              class="text-accent-800 font-display"
            >
              Visit us today
            </Text>
            <Text
              tag="p"
              variant="textSM"
              class="text-base-600 mt-1 lg:text-balance"
            >
              預約法律諮詢 at any of our convenient locations. Our
              experienced attorneys are ready to discuss your legal needs and
              provide the guidance you deserve.
            </Text>
          </div>

          <div
            class="flex flex-col lg:flex-row lg:shrink-0 items-center gap-2 lg:ml-auto"
          >
            <Button
              isLink={true}
              href="/contact"
              variant="default"
              size="sm"
              class="w-full lg:w-fit"
            >
              Schedule Consultation
            </Button>
            <Button
              isLink={true}
              variant="muted"
              size="sm"
              href="/free-consultation"
              class="w-full lg:w-fit"
            >
              免費法律諮詢
            </Button>
          </div>
        </div>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
